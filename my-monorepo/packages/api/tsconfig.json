{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@my-monorepo/db": ["../db/src/prismaClient.ts"],
      "@my-monorepo/services": [
        "../services/firebase/imageService.ts",
        "../services/notifications/websocketServer.ts"
      ]
    },
    "types": ["jest"]  // Mant√©n esto para que TypeScript sepa que debe incluir los tipos de Jest
  },
  "include": ["src/**/*.ts", "api/**/*.ts"],
  "exclude": ["node_modules"]
}
